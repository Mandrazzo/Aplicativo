<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fundoapp"
    tools:context=".Rastreio">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insira seu cÃ³digo de rastreio"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="350dp"/>

            <EditText
                android:id="@+id/codRastreio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/icone_mensagem"
                android:drawablePadding="8dp"
                android:hint="Cod. Rastreio"
                android:textColorHint="@color/cinza_fosco"
                android:maxLength="30"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/recuperarSenha"
                    android:layout_width="133dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/black"
                    android:text="Confirmar"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/voltar"
                    android:layout_width="133dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/black"
                    android:text="Voltar"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>